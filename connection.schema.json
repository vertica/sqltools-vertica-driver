{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "server": {
      "title": "Server Address",
      "type": "string",
      "minLength": 1,
      "default": "localhost"
    },
    "port": {
      "title": "Port",
      "type": "number",
      "minimum": 1,
      "default": 5433
    },
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "usePassword": {
      "title": "Use password",
      "type": "string",
      "enum": [
        "SQLTools Driver Credentials",
        "Ask on connect",
        "Use empty password",
        "Save as plaintext in settings"
      ],
      "default": "SQLTools Driver Credentials"
    },
    "tlsmode": {
      "type": "string",
      "title": "TLS",
      "enum": ["disable", "require", "verify-ca", "verify-full"],
      "default": "disable"
    }
  },
  "required": [
    "server",
    "port",
    "username"
  ],
  "dependencies": {
    "usePassword": {
      "oneOf": [
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Ask on connect"
              ]
            },
            "askForPassword": {
              "type": "boolean",
              "default": true
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Use empty password"
              ]
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Save as plaintext in settings"
              ]
            },
            "password": {
              "title": "Password",
              "type": "string",
              "minLength": 0
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "SQLTools Driver Credentials"
              ]
            }
          }
        }
      ]
    },
    "tlsmode": {
      "oneOf": [
        {
          "properties": {
            "tlsmode": {
              "enum": ["disable", "require"]
            }
          }
        },
        {
          "properties": {
            "tlsmode": {
              "enum": ["verify-ca", "verify-full"]
            },
            "tls": {
              "type": "object",
              "title": "TLS Options",
              "properties": {
                "ca": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    }
  }
}