{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "server": {
      "title": "Server Address",
      "type": "string",
      "minLength": 1,
      "default": "localhost"
    },
    "port": {
      "title": "Port",
      "type": "number",
      "minimum": 1,
      "default": 5433
    },
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 0
    }
  },
  "required": [
    "server",
    "port",
    "username"
  ]
}