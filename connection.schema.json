{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "title": "Server Address",
      "type": "string",
      "minLength": 1
    },
    "port": {
      "title": "Port",
      "type": "number"
    },
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "user": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 0
    }
  },
  "required": [
    "host",
    "port",
    "user"
  ]
}